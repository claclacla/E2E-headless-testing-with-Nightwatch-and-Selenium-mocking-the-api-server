{
  "src_folders": [
    "/usr/src/app/test/e2e/tests"
  ],
  "output_folder": "/usr/src/app/test/e2e/reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "globals_path": "",
  "selenium": {
    "start_process": false,
    "server_path": "/opt/selenium/selenium-server-standalone.jar",
    "log_path": "/usr/src/app/test/e2e/reports",
    "host": "selenium",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "/opt/selenium/chromedriver-2.29"
    }
  },
  "test_settings": {
    "default": {
      "selenium_port": 4444,
      "selenium_host": "selenium",
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "path" : "/usr/src/app/test/e2e/screenshots",
        "on_failure": true,
        "on_error": true
      },
      "desiredCapabilities": {
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "browserName": "chrome",
        "chromeOptions": {
          "args": [
            "headless",
            "no-sandbox",
            "disable-gpu"
          ]
        }
      }
    }
  }
}